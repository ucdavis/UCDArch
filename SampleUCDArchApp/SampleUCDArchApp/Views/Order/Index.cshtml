@model IEnumerable<SampleUCDArchApp.Core.Domain.Order>

@{
	ViewBag.Title = "Index";
}

@section subhead
{
    <h1>Orders</h1>
}

@section subnav
{
    <li>@Html.ActionLink("Create New", "Create")</li>        
}


@Styles.Render("~/Content/DataTables-1.9.4/media/css/dataTables")

@section AdditionalScripts
{
    @Scripts.Render("~/bundles/datatables")

    <script type="text/javascript">
        $(function () {
            $(".table").dataTable({
                "aaSorting": [[ 1, "asc" ]], //Default sort on second column
                "aoColumnDefs": [
                    { 'bSortable': false, 'aTargets': [0, 3] } //Disables sort on icon columns
                ]
            });
        });
    </script>    
}

<table class="table table-striped table-bordered table-hover">
	<thead>
		<tr>
		    <th></th>
		    <th>Customer</th>
			<th>
				OrderDate
			</th>
			<th>
				ShipAddress
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
		    <td>
		        <a href='@Url.Action("Details", new {id=item.Id})' class="btn" title="Details"><i class="icon-file"></i></a>
		        <a href='@Url.Action("Edit", new {id=item.Id})' class="btn" title="Edit"><i class="icon-edit"></i></a>
		    </td>
		    <td>
		        @item.OrderedBy.Id
		    </td>
			<td>
				@String.Format("{0:d}", item.OrderDate)
			</td>
			<td>
				@item.ShipAddress
			</td>
			<td>
				<a href='@Url.Action("Delete", new {id=item.Id})' class="btn" title="Remove"><i class="icon-remove"></i></a>
			</td>
		</tr>
}
	</tbody>
</table>

